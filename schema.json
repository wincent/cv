{
  "cv": {
    "definitions": {
      "localized": {
        "$id": "#localized",
        "type": "object",
        "propertyNames": {"enum": {"$data": "/languages"}},
        "required": {"$data": "/languages"},
        "patternProperties": {
          ".*": {"type": "string"}
        },
        "additionalProperties": false
      },
      "dateish": {
        "$id": "#dateish",
        "anyOf": [
          {"format": "date"},
          {"pattern": "^\\d{4}-\\d{2}$", "type": "string"}
        ]
      }
    },
    "properties": {
      "languages": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "string",
          "pattern": "^[a-z]{2}$"
        }
      },
      "version": {"format": "date"},
      "identity": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "email": {"format": "email", "type": "string"},
          "name": {"type": "string"}
        },
        "required": ["email", "name"]
      },
      "presence": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "facebook": {"format": "uri", "type": "string"},
          "github": {"format": "uri", "type": "string"},
          "keybase": {"format": "uri", "type": "string"},
          "linkedin": {"format": "uri", "type": "string"},
          "stackoverflow": {"format": "uri", "type": "string"},
          "twitter": {"format": "uri", "type": "string"},
          "website": {"format": "uri", "type": "string"}
        }
      },
      "profile": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "label": {"$ref": "#localized"},
          "primary": {"$ref": "#localized"},
          "secondary": {"$ref": "#localized"}
        },
        "required": ["label", "primary", "secondary"]
      },
      "experience": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "label": {"$ref": "#localized"},
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "role": {"$ref": "#localized"},
                "company": {"type": "string"},
                "location": {"type": "string"},
                "from": {"$ref": "#dateish"},
                "to": {"$ref": "#dateish"},
                "description": {"$ref": "#localized"}
              },
              "required": ["role", "company", "location", "from", "description"]
            }
          }
        }
      },
      "education": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "label": {"$ref": "#localized"},
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "institution": {"type": "string"},
                "graduated": {"$ref": "#dateish"},
                "qualification": {"type": "string"}
              },
              "required": ["institution", "graduated", "qualification"]
            }
          }
        }
      },
      "awards": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "label": {"$ref": "#localized"},
          "items": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "publications": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "label": {"$ref": "#localized"},
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "title": {"type": "string"},
                "link": {"format": "uri", "type": "string"},
                "when": {"$ref": "#dateish"}
              },
              "required": ["title", "link", "when"]
            }
          }
        }
      },
      "skills": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "label": {"$ref": "#localized"},
          "categories": {
            "type": "object",
            "patternProperties": {
              ".*": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "label": {"$ref": "#localized"},
                  "items": {
                    "type": "array",
                    "items": {
                      "anyOf": [{"type": "string"}, {"$ref": "#localized"}]
                    }
                  }
                },
                "required": ["label", "items"]
              }
            }
          }
        },
        "required": ["label", "categories"]
      }
    },
    "type": "object"
  },
  "pii": {
    "definitions": {
      "localized": {
        "$id": "#localized",
        "type": "object",
        "propertyNames": {"enum": {"$data": "/languages"}},
        "required": {"$data": "/languages"},
        "patternProperties": {
          ".*": {"type": "string"}
        },
        "additionalProperties": false
      }
    },
    "properties": {
      "languages": {
        "description": "This property need not exist in the input file, but rather gets dynamically copied from the 'cv' source at runtime.",
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "string",
          "pattern": "^[a-z]{2}$"
        }
      },
      "street": {"type": "string"},
      "zip": {"type": "number"},
      "city": {"type": "string"},
      "country": {"$ref": "#localized"},
      "phone": {"type": "string"}
    },
    "additionalProperties": false,
    "required": ["street", "zip", "city", "country", "phone"],
    "type": "object"
  }
}
